---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Jersey+10&display=swap" rel="stylesheet">
		<link rel="shortcut icon" href="/image5.png" type="image/x-icon">
		<title>{title}</title>
	</head>
	<body>
		<div>
			<div class="absolute top-0 z-[-2] h-screen w-screen bg-[rgba(11, 28, 36, 1)] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(58,91,85,0.8),rgba(255,255,255,0))]"></div>
		</div>
		<slot />
	</body>
</html>
<style is:global>

	*{
		box-sizing: border-box;
		margin: 0%;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color:white;
		scroll-behavior: smooth;
	}
	

	h1{
		font-family: "Jersey 10", sans-serif;
		letter-spacing: 2px;
		text-align: center;
	}

	h2{
		font-family: "Jersey 10", sans-serif;
		letter-spacing: 2px;	
	}

	body{
		font-family: "Inter", sans-serif;
		overflow-x: hidden;
	}

	section{
		max-width: 900px;
		margin: auto;
		margin-top: 30px;
	}

</style>
